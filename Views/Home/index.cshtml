                    @* <span asp-validation-for="City"></span> *@
                    @* <input asp-for="City" placeholder="City"> *@

                    <span asp-validation-for="Zipcode"></span>
                    <input asp-for="Zipcode" placeholder="Zipcode">

                    <footer>
                        <button type="button" onclick="hideAddress()">back</button>

